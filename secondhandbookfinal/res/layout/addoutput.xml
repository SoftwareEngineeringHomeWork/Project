<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p11"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv1"
        android:layout_width="1sp"
        android:layout_height="1sp"
        android:background="@android:color/background_light"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <View
        android:id="@+id/v1"
        android:layout_width="fill_parent"
        android:layout_height="3sp"
        android:layout_below="@id/tv1"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_marginTop="10sp"
        android:text="买家姓名："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <Spinner
        android:id="@+id/sp1"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_toRightOf="@id/tv2"
        android:prompt="@string/xzgs" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sp1"
        android:layout_marginTop="8sp"
        android:text="电话 ："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sp1"
        android:layout_toRightOf="@id/tv3"
        android:enabled="true"
        android:phoneNumber="true"
        android:singleLine="true"
        android:text="13000000000" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et1"
        android:layout_marginTop="8sp"
        android:text="短号："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et1"
        android:layout_toRightOf="@id/tv4"
        android:enabled="true"
        android:phoneNumber="true"
        android:singleLine="true"
        android:text="62109" />

    <View
        android:id="@+id/v2"
        android:layout_width="fill_parent"
        android:layout_height="3sp"
        android:layout_below="@id/et2"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/v3"
        android:layout_width="3sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/v2"
        android:layout_toRightOf="@id/sp1"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_marginTop="8sp"
        android:layout_toRightOf="@id/sp1"
        android:text="书名："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <Spinner
        android:id="@+id/sp2"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_toRightOf="@id/tv5"
        android:prompt="@string/xzsp" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sp2"
        android:layout_marginTop="8sp"
        android:layout_toRightOf="@id/sp1"
        android:text="备注："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/et3"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sp2"
        android:layout_toRightOf="@id/tv6"
        android:enabled="true"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et3"
        android:layout_marginTop="8sp"
        android:layout_toRightOf="@id/sp1"
        android:text="收购价格："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/et4"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et3"
        android:layout_toRightOf="@id/tv6"
        android:enabled="true"
        android:phoneNumber="true"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v2"
        android:layout_marginTop="8sp"
        android:text="学校："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/et5"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/v2"
        android:layout_toRightOf="@id/tv8"
        android:enabled="true"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v2"
        android:layout_marginTop="8sp"
        android:layout_toRightOf="@id/et5"
        android:text="出售数量："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/et6"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/v2"
        android:layout_toRightOf="@id/tv9"
        android:enabled="true"
        android:phoneNumber="true"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et5"
        android:layout_marginTop="8sp"
        android:text="出售日期："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <DatePicker
        android:id="@+id/dp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et5"
        android:layout_toRightOf="@id/tv10" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et5"
        android:layout_marginTop="20sp"
        android:layout_toRightOf="@id/dp1"
        android:text="保存信息" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt1"
        android:layout_toRightOf="@id/dp1"
        android:text="返回上一级" />

</RelativeLayout>